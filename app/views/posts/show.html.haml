%h2 Title:
%p= @post.title
%h3 Body:
%p= @post.body

/ I wanted to use a partial but rails said no
/ = render @post.comments

%h3 Comments
-@post.comments.each do |comment|
	%p.comment
		%span.commenter= comment.commenter
		says
		%blockquote.comment_body= comment.body
		%div.comment_delete_link= link_to 'Delete Comment', [comment.post.blog.user, comment.post.blog, comment.post, comment], method: :delete, data: { confirm: "Are you sure?" }

%h2 Add a comment:
/ = render 'comments/form'
= form_for :comment, url: user_blog_post_comments_path(@user.id, @blog.id, @post.id) do |f|
	/ @post.comments.build
	%p
		= f.label :commenter
		%br
		= f.text_field :commenter
	%p
		= f.label :body
		%br
		= f.text_area :body
	%p
		=f.submit

%span= link_to 'Edit this post', edit_user_blog_post_path(@user.id, @blog.id, @post)
|
%span= link_to 'Back to the blog', user_blog_path(@user.id, @blog.id)
|
%span= link_to 'Delete', user_blog_post_path(@user.id, @blog.id, @post), method: :delete, data: { confirm: "Are you sure?" }