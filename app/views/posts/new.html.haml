%h1 New Post

/ = render 'form'
= form_for :post, url: posts_path do |f|
	- if @post.errors.any?
		#error_explanation
			%h2
				= pluralize(@post.errors.count, "error")
				prohibited this from being saved
			%ul
				- @post.errors.full_messages.each do |msg|
					%li= msg

	%p
		= f.label :title
		%br
		= f.text_field :title

	%p
		= f.label :body
		%br
		= f.text_area :body

	%p
		= f.submit

= link_to 'nevermind', posts_path