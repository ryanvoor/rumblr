!!!
%html
	%head
	%title Rumblr
	= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags
	%body
		:javascript
			if logged_in? {
				document.getElementById('container').style.background = current_user.color;
			}
		#container{style: "background-color: #{current_user.color};"}
			= yield
